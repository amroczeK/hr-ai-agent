{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS Backend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:debug"
            ],
            "cwd": "${workspaceFolder}/apps/backend",
            "console": "integratedTerminal",
            "restart": true,
            "protocol": "inspector",
            "port": 9229,
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to NestJS Backend",
            "port": 9229,
            "restart": true,
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/apps/backend",
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}